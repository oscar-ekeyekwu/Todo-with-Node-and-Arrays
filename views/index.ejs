<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://pbs.twimg.com/profile_images/1019059570679918598/QyIqi0KM_400x400.jpg" rel="icon">
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
  	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <title>Todo List App</title>
    <style type="text/css">
  		h1{
  			margin-top: 10rem;
  		}
  		form{
  			margin-bottom: 2rem;
  		}
    </style>
  </head>
  <body>
    <!--navbar-->
  	<nav class="navbar navbar-dark bg-dark">
  		<a class="navbar-brand" href="#">
        <strong><i class="fa fa-check"></i> TodoList</strong>
  		</a>
  	</nav>
  	 <div class="container">
  	 	<row>
  	 		<h1 class="text-center">What To Do !</h1>
  	 		<form class="col-6 mx-auto" action="/newtodo" method="post">
  	 			<div class="input-group">
  	 				<input type="text" name="item" class="form-control" placeholder="Enter what you want to do"><span>
  	 					<button type="submit" class="btn btn-primary">Submit</button></span>
  	 			</div>
  	 		</form>
  	 	</row>

   		<div>
  			<table class="table table-hover table-stripped table-bordered">
  				<thead>
  					<th colspan="3">Things to do</th><th>Done?</th>
  				</thead>
  				<tbody>
  					<% for(var i = 0; i < todoItems.length; i++){%>
  						<tr>
  							<td colspan="3"><%= todoItems[i].item %></td>
  							<td><a href="javascript:void(0)" onclick="remove('<%= todoItems[i].item %>')" class="btn btn-primary">
  								<i class="fa fa-check"></i> Remove
  							</td>
  						</tr>
  					<% } %>
  				</tbody>
  			</table>
  		</div>
      <br>
         <p style="color: red"><strong>Note: Click the Refresh Button After Removing a Todo Item</strong></p>
      <br>
      <div>
  			<table class="table table-hover table-stripped table-bordered">
  				<thead>
  					<th colspan="3">Completed</th><th>Done</th>
  				</thead>
  				<tbody>
  					<% for(var i = 0; i < completedTask.length; i++){%>
  						<tr>
  							<td colspan="3"><%= completedTask[i].item %></td>
  							<td><button class="btn btn-success">
  								<i class="fa fa-check"></i>
  							</td>
  						</tr>
  					<% } %>
  				</tbody>
  			</table>
  		</div>
   	</div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script>
      function remove(e){
        console.log(e);
        $.ajax({
        url: "/remove",
        type: "get",
        data: {item: $.trim(e)},
          success: function(data){
            console.log("form submitted successfully");
          }
        });
      };
    </script>
  </body>
</html>
